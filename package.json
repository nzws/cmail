{
  "name": "cmail",
  "packageManager": "yarn@4.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "yarn migration:dev && yarn pages:build && yarn pages:dev",
    "lint": "eslint --cache '**/*.{ts,tsx}' && tsc --noEmit",
    "format": "prettier --write --cache . && eslint --fix --cache .",
    "deploy": "yarn migration:prod && yarn workers:deploy && yarn pages:deploy",
    "migration:create": "drizzle-kit generate:sqlite --out migrations --schema lib/schema.ts",
    "migration:prod": "wrangler d1 migrations apply cmail",
    "migration:dev": "wrangler d1 migrations apply cmail --local",
    "workers:deploy": "wrangler deploy",
    "workers:dev": "wrangler dev --test-scheduled --port=3001",
    "pages:build": "remix build",
    "pages:deploy": "yarn pages:build && wrangler pages deploy ./public",
    "pages:dev": "remix dev --manual -c \"wrangler pages dev ./public --port=3000 --compatibility-date=2023-10-28\"",
    "studio": "drizzle-kit studio",
    "dev:insert-dummy-data": "node --loader esbuild-register/loader -r esbuild-register ./scripts/insert-dummy-data.ts"
  },
  "dependencies": {
    "@radix-ui/themes": "2.0.0",
    "@remix-run/cloudflare": "2.2.0",
    "@remix-run/cloudflare-pages": "2.2.0",
    "@remix-run/css-bundle": "2.2.0",
    "@remix-run/react": "2.2.0",
    "cookie": "0.6.0",
    "date-fns": "2.30.0",
    "drizzle-orm": "0.29.0-1a482ce",
    "isbot": "^3.7.0",
    "jose": "5.1.0",
    "lucide-react": "0.292.0",
    "postal-mime": "2.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-loading-skeleton": "3.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20231025.0",
    "@faker-js/faker": "8.2.0",
    "@remix-run/dev": "2.2.0",
    "@remix-run/eslint-config": "2.2.0",
    "@tsconfig/node20": "20.1.2",
    "@types/better-sqlite3": "7.6.7",
    "@types/cookie": "0.5.4",
    "@types/jsonwebtoken": "9.0.5",
    "@types/node": "20.9.0",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "@typescript-eslint/eslint-plugin": "6.10.0",
    "@typescript-eslint/parser": "6.10.0",
    "better-sqlite3": "9.1.1",
    "concurrently": "8.2.2",
    "drizzle-kit": "0.19.13",
    "esbuild": "0.19.5",
    "esbuild-register": "3.5.0",
    "eslint": "8.53.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-next-on-pages": "1.7.2",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "prettier": "3.0.3",
    "sass": "1.69.5",
    "typescript": "5.2.2",
    "wrangler": "3.15.0"
  }
}
