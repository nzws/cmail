{
  "name": "cmail",
  "packageManager": "yarn@4.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "yarn migration:dev && yarn pages:build && concurrently 'yarn workers:dev' 'yarn pages:dev'",
    "lint": "next lint && tsc --noEmit",
    "format": "prettier --write --cache . && eslint --fix --cache .",
    "deploy": "yarn migration:prod && yarn workers:deploy && yarn pages:deploy",
    "migration:create": "drizzle-kit generate:sqlite --out migrations --schema lib/schema.ts",
    "migration:prod": "wrangler d1 migrations apply cmail",
    "migration:dev": "wrangler d1 migrations apply cmail --local",
    "workers:deploy": "wrangler deploy",
    "workers:dev": "wrangler dev --test-scheduled --port=3001",
    "pages:build": "remix build",
    "pages:deploy": "yarn pages:build && wrangler pages deploy ./public",
    "pages:dev": "remix dev --manual -c \"wrangler pages dev ./public --port=3000 --compatibility-date=2023-10-28\"",
    "studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@radix-ui/themes": "2.0.0",
    "@remix-run/cloudflare": "2.1.0",
    "@remix-run/cloudflare-pages": "2.1.0",
    "@remix-run/css-bundle": "2.1.0",
    "@remix-run/react": "2.1.0",
    "drizzle-orm": "0.28.6",
    "isbot": "latest",
    "lucide-react": "0.290.0",
    "postal-mime": "1.0.16",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-loading-skeleton": "3.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20231025.0",
    "@remix-run/dev": "2.1.0",
    "@remix-run/eslint-config": "2.1.0",
    "@types/node": "20.8.9",
    "@types/react": "18.2.33",
    "@types/react-dom": "18.2.14",
    "@typescript-eslint/eslint-plugin": "6.9.0",
    "@typescript-eslint/parser": "6.9.0",
    "better-sqlite3": "9.0.0",
    "concurrently": "8.2.2",
    "drizzle-kit": "0.19.13",
    "eslint": "8.52.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-next-on-pages": "1.7.2",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "prettier": "3.0.3",
    "sass": "1.69.5",
    "typescript": "5.2.2",
    "wrangler": "3.15.0"
  }
}
